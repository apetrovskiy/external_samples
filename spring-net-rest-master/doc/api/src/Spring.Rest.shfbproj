  <ItemGroup>
    <Reference Include="Common.Logging">
      <HintPath>..\..\..\bin\net\4.5\Release\Common.Logging.dll</HintPath>
    </Reference>
  </ItemGroup>
  <!-- Import the SHFB build targets -->
  <Import Project="$(SHFBROOT)\SandcastleHelpFileBuilder.targets" />
</Project>
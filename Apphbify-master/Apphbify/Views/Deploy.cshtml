@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Apphbify.ViewModels.DeployViewModel>
@{
    Layout = "Master.cshtml";
}
<div class="page-header">
    <h1>Deploy @Model.App.Name</h1>
</div>
<p>@Model.App.Description</p>
<p>
    Please complete the following details to configure your deployment.
</p>
<form method="post" action="/Deploy/@Model.App.Key" class="well">
    <fieldset>
        <legend></legend>
        <label for="application_name">Application name</label>
        <input type="text" name="application_name" id="application_name" placeholder="name your deployment..." />
        <label for="region_id">Deployment Region</label>
        <select name="region_id" id="region_id">
            @foreach (var region in Model.Regions)
            {
                <option value="@region.Value">@region.Name</option>
            }
        </select>
        @foreach (var variable in Model.App.Variables)
        {
            <label for="@variable.Key">@variable.Value</label>
            <input type="text" name="@variable.Key" />
        }
    </fieldset>
    <button type="submit" class="btn btn-info btn-large">Deploy</button>
</form>